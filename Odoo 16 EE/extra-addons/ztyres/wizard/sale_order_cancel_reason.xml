<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="cancel_reason_view_form" model="ir.ui.view">
            <field name="name">Motivo de Cancelación</field>
            <field name="model">ztyres.cancel_reason</field>
            <field name="arch" type="xml">
                <form string="Motivo de Cancelación">
                    <sheet>
                        <group>
                            <field name="cancel_reason" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Aceptar" name="action_cancel_reason" type="object" default_focus="1" class="btn-primary"/>
                        <button string="No Cancelar" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>