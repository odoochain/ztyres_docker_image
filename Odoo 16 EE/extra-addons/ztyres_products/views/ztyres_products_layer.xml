<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="ztyres_products.layer_tree" model="ir.ui.view">
            <field name="name">ztyres_products.layer.tree</field>
            <field name="model">ztyres_products.layer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>                    
                </tree>
            </field>
        </record>

        <record id="ztyres_products.layer_view_form" model="ir.ui.view">
            <field name="name">ztyres_products.layer.view.form</field>
            <field name="model">ztyres_products.layer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ztyres_products.layer_action" model="ir.actions.act_window">
            <field name="name">Capas</field>
            <field name="res_model">ztyres_products.layer</field>            
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>