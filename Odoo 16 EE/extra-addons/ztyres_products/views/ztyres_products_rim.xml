<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="ztyres_products.rim_tree" model="ir.ui.view">
            <field name="name">ztyres_products.rim.tree</field>
            <field name="model">ztyres_products.rim</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number"/> 
                    <field name="rim_name"/>                    
                </tree>
            </field>
        </record>

        <record id="ztyres_products.rim_view_form" model="ir.ui.view">
            <field name="name">ztyres_products.rim.view.form</field>
            <field name="model">ztyres_products.rim</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="number"/> 
                            <field name="rim_name"/>    
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ztyres_products.rim_action" model="ir.actions.act_window">
            <field name="name">Rin</field>
            <field name="res_model">ztyres_products.rim</field>            
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>