<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="studio_customization.odoo_studio_sale_ord_c218cff7-2244-4909-9ac0-f0b25c02c21f" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                   <group>                    
                        <field name="x_studio_val_ventas" string="Gerente Ventas" readonly="1"  invisible="1" />                                
                        <field name="x_studio_aprobacin_de_monto" string="Aprobación de monto" readonly="1" invisible="1" />
                        <field name="x_studio_val_credito" string="Gerente Crédito" force_save="True" widget="boolean" readonly="1" invisible="1" />
                        <field name="x_studio_val_pago" string="Pago Anticipado" readonly="1" invisible="1" />
                        <field name="x_studio_solicitud_de_embarques" string="Solicitud de Embarques"  widget="selection" readonly="1" invisible="1"/>                
                   </group>
                  </xpath>

            </field>
        </record>
       

    </data>
</odoo>