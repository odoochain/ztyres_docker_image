<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="ztyres_products.segment_tree" model="ir.ui.view">
            <field name="name">ztyres_products.segment.tree</field>
            <field name="model">ztyres_products.segment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>                    
                </tree>
            </field>
        </record>

        <record id="ztyres_products.segment_view_form" model="ir.ui.view">
            <field name="name">ztyres_products.segment.view.form</field>
            <field name="model">ztyres_products.segment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ztyres_products.segment_action" model="ir.actions.act_window">
            <field name="name">Segmento</field>
            <field name="res_model">ztyres_products.segment</field>            
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>