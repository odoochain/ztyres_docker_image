<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="ztyres_products.tire_measure_tree" model="ir.ui.view">
            <field name="name">ztyres_products.tire_measure.tree</field>
            <field name="model">ztyres_products.tire_measure</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="width_id"/>
                    <field name="separator_id"/>
                    <field name="profile_id"/>
                    <field name="rim_id"/>                    
                    <field name="old_name"/>                  
                </tree>
            </field>
        </record>

        <record id="ztyres_products.tire_measure_view_form" model="ir.ui.view">
            <field name="name">Medida</field>
            <field name="model">ztyres_products.tire_measure</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="width_id"/>
                            <field name="separator_id"/>
                            <field name="profile_id"/>
                            <field name="rim_id"/>                            
                            <field name="old_name"/>  
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ztyres_products.tire_measure_action" model="ir.actions.act_window">
            <field name="name">Medida</field>
            <field name="res_model">ztyres_products.tire_measure</field>            
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>